@model IEnumerable<SurfUpRedux.Models.SurfUpUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Brugerliste</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-userId="@item.Id">Fjern</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Delete";
}

<h1>Slet Bruger</h1>

<h3>Er du sikker på, at du vil slette denne bruger?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Bruger
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Slet" class="btn btn-danger" /> |
        <a asp-action="Index">Tilbage til listen</a>
    </form>
</div>

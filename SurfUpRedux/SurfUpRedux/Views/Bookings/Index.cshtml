@model IEnumerable<SurfUpRedux.Models.Booking>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.IsInRole("User"))
{
    <h1>Dine udlejninger</h1>
}

@if (User.IsInRole("Admin,Manager"))
{
    <h1>Nuværende udlejninger</h1>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Startdato
            </th>
            <th>
                Slutdato
            </th>
            <th>
                Surfbræt
            </th>
            <th>
                Bruger
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Board.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Rediger</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Fjern</a>
                    </td>
                }
                @if (User.IsInRole("User"))
                {
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Fjern</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
